{{ next_data('waline', {
  lang: page.lang | default('zh-CN', true)
}, config.waline, {
  el: '#waline',
  comment: true,
  libUrl: config.waline.libUrl | default('//unpkg.com/@waline/client@v2/dist/waline.js', true),
